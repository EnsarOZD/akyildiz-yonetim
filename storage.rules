rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Tüm dosyalar için kimlik doğrulama gerekir
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Kullanıcı profil resimleri
    match /users/{userId}/profile/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId && 
        request.resource.size < 5 * 1024 * 1024 && // Max 5MB
        request.resource.contentType.matches('image/.*');
    }
    
    // Şirket belgeleri
    match /companies/{companyId}/documents/{fileName} {
      allow read, write: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.companyId == companyId;
    }
    
    // Ödeme makbuzları
    match /receipts/{year}/{month}/{fileName} {
      allow read: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['admin', 'manager', 'viewer'];
      allow write: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['admin', 'manager'] &&
        request.resource.size < 10 * 1024 * 1024; // Max 10MB
    }
  }
}